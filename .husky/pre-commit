#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

rm -rf ./.github/actions/hello/dist
npx @zeit/ncc build ./.github/actions/hello/index.js -o ./.github/actions/hello/dist
git add ./.github/actions/hello/dist/index.js
npx @zeit/ncc build ./.github/actions/issue/index.js -o ./.github/actions/issue/dist
git add ./.github/actions/issue/dist/index.js
npx lint-staged
